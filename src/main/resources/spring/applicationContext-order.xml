<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="orderAction" class="cn.itcast.erp.invoce.order.action.OrderAction" scope="prototype">
		<property name="orderEbi" ref="orderEbi"/>
		<property name="supplierEbi" ref="supplierEbi"/>
		<property name="goodsTypeEbi" ref="goodsTypeEbi"/>
		<property name="goodsEbi" ref="goodsEbi"/>
		<property name="empEbi" ref="empEbi"/>
	</bean>
	
	<bean id="orderEbi" class="cn.itcast.erp.invoce.order.business.ebo.OrderEbo">
		<property name="orderDao" ref="orderDao"/>
	</bean>

	<bean id="orderDao" class="cn.itcast.erp.invoce.order.dao.impl.OrderImpl">
		<property name="sessionFactory" ref="sessionFactory"/>
	</bean>
</beans>
